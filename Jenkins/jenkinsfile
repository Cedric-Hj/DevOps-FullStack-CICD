pipeline {
    agent {
        node {
            label 'maven-slave'
        }
    }

    environment {
        MAVEN_HOME = '/opt/apache-maven-3.9.7'
        PATH = "${MAVEN_HOME}/bin:${env.PATH}"
        NODE_OPTIONS = '--max_old_space_size=512'

    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Cedric-Hj/DevOps-FullStack-CICD.git'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean install'
            }
        }

        stage("Sonar Analysis") {
            environment {
                scannerHome = tool 'sonar-scanner'
            }
            steps {
                echo '<--------------- Sonar Analysis started  --------------->'
                script {
                    def scannerArgs = [
                        "-Dsonar.projectKey=Cedric-Hj_DevOps-FullStack-CICD",
                        "-Dsonar.sources=src",
                        "-Dsonar.junit.reportPaths=target/surefire-reports"  
                    ]
                    withSonarQubeEnv('sonar-server') {
                        sh "${scannerHome}/bin/sonar-scanner ${scannerArgs.join(' ')}"
                    }
                }
                echo '<--------------- Sonar Analysis stopped  --------------->'
            }
        }
    }

    post {
        success {
            echo 'Build completed successfully'
        }
        failure {
            echo 'Build failed'
        }
    }
}
